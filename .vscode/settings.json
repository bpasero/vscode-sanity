{
    "chat.instructionsFilesLocations": {
        "src": true,
        ".vscode": true
    },
    "chat.modeFilesLocations": {
        ".vscode": true
    },
    "chat.promptFilesLocations": {
        "src": true,
        ".vscode": true
    },
    "[instructions]": {
        "editor.quickSuggestions": {
			"comments": "off",
            "strings": "off",
            "other": "off"
		},
        "editor.wordWrap": "bounded"
    },
    "[prompt]": {
        "editor.quickSuggestions": {
			"comments": "off",
            "strings": "off",
            "other": "off"
		},
        "editor.wordWrap": "bounded"
    },
    "[chatmode]": {
        "editor.quickSuggestions": {
			"comments": "off",
            "strings": "off",
            "other": "off"
		},
        "editor.wordWrap": "bounded"
    },
    "mcp": {
        "servers": {
            "context7": {
            "type": "stdio",
            "command": "npx",
            "args": ["-y", "@upstash/context7-mcp"]
            }
        }
    }
}